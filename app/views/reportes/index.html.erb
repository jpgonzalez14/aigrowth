<p id="notice"><%= notice %></p>

<h1>Reportes</h1>

<table>
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Datos</th>
      <th>Planta</th>
      <th>Microcontrolador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reportes.each do |reporte| %>
      <tr>
        <td><%= reporte.tipo %></td>
        <td><%= reporte.datos %></td>
        <td><%= reporte.planta_id %></td>
        <td><%= reporte.microcontrolador_id %></td>
        <td><%= link_to 'Show', reporte %></td>
        <td><%= link_to 'Edit', edit_reporte_path(reporte) %></td>
        <td><%= link_to 'Destroy', reporte, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reporte', new_reporte_path %>
